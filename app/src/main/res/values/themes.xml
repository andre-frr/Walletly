<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Walletly" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <!-- Reduzir a sombra do PopUp menu -->
    <style name="NoShadowPopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupElevation">2dp</item>
    </style>

    <!-- Reduzir a sombra do Spinner -->
    <style name="SpinnerDropdownStyle">
        <item name="android:popupElevation">2dp</item>
    </style>

</resources>