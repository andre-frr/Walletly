<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionHubActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/idBottomNavBar"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/stack_sans_notch"
            android:text="@string/str_nav_transactions"
            android:textColor="@color/text_primary"
            android:textSize="32sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/idBtnAddIncome"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/stack_sans_notch"
            android:gravity="start|center_vertical"
            android:text="@string/str_btn_add_income"
            android:textAlignment="viewStart"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="start"
            app:iconTint="@color/text_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/idBtnAddExpense"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:fontFamily="@font/stack_sans_notch"
            android:gravity="start|center_vertical"
            android:text="@string/str_btn_add_expense"
            android:textAlignment="viewStart"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            app:icon="@drawable/ic_arrow_backward"
            app:iconGravity="start"
            app:iconTint="@color/text_primary" />

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/idBottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        app:elevation="8dp"
        app:itemIconTint="@color/text_primary"
        app:itemTextColor="@color/text_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>